@using Portfolio.Classes
@model List<Core.Models.Experience>
<section class="other-projects">
    <div class="row justify-content-lg-center">
        <div class="col-12">
            <h2>
                Other Projects
            </h2>
        </div>
        <div class="col-12 col-lg-10">
            <div class="row justify-content-center other-projects-cards">
                @foreach (var item in Model)
                {
                    <div class="col-12 col-lg-12">
                        <div class="card">
                            <div class="card-body">
                                <div class="head-section">
                                    <img src="@ImgPath.Images@item.Image" alt="@item.Title.AltBuilder()" />
                                    <div class="head-text">
                                        <h3>@item.Company</h3>
                                        <p>
                                            @item.Title / @item.DateStart
                                            @if (!string.IsNullOrEmpty(item.Url))
                                            {
                                                <text>
                                                    / <a href="@item.Url" target="_blank">@item.Url</a>
                                                </text>
                                            }
                                        </p>
                                    </div>
                                </div>
                                <div class="text">
                                    @Html.Raw(item.Text)
                                </div>
                            </div>
                        </div>
                    </div>
                } 
            </div>
        </div>
    </div> 
</section>
